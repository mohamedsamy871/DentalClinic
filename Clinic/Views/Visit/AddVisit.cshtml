@model DataAccess.Models.VisitInfo
<style>
    .form-section {
        background-color: #0156A1;
        color: #777;
        border-radius: 20px;
        padding: 20px
    }
</style>
<div class="container">
    <div class="row">
        <div class="col ">
            <div class="img-container">
                <img src="~/imgs/manwithmobile.png" class="img-fluid" />
            </div>
        </div>
        <div class="col form-section align-self-center">
            <form method="post" asp-controller="Visit" asp-action="AddVisit">
                <div class="form-group">
                    @Html.DropDownList("Type",
                        Html.GetEnumSelectList<DataAccess.Models.VisitInfo.VisitType>(),
                        "Select Type", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="visit-amount" class="text-light">Visit Price</label>
                    <input type="text" asp-for="VisitAmout" id="visit-amount"/>
                </div>
                <input type="hidden" asp-for="PatientId" value="@ViewBag.PatientId" />
                <button type="submit" class="btn btn-light">Submit</button>
            </form>
        </div>

    </div>
</div>
