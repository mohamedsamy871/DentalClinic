@model IEnumerable<DataAccess.Models.PatientInfo>
<a asp-action="AddPatient" asp-controller="Patient" class="btn btn-primary mb-3">
    Add Patient
</a>
<h6>
    Clinic Schedule
</h6>
<table class="table table-hover" id="admintable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Appointment</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @item.Id
                </td>
                <td scope="row">
                    <a asp-controller="Patient" asp-action="GetPatient" asp-route-id="@item.Id">
                        @item.Name
                    </a>
                </td>
                <td scope="row">
                    @item.Phone
                </td>
                <td scope="row">
                    @if (item.ClinicSchedules.Count > 0)
                    {
                        @foreach (var subitem in item.ClinicSchedules)
                        {
                            <p>  @subitem.Day /  @subitem.Month /   @subitem.Year</p>
                        }
                    }
                    else
                    {
                        <p class="text-danger">No Appointments For This Patient</p>
                    }
                </td>
                <td scope="row">
                    @if (item.ClinicSchedules.Count == 0)
                    {
                        <a class="btn btn-info" asp-action="AddAppointment" asp-controller="Appointment" asp-route-id="@item.Id"
                           data-toggle="tooltip" data-placement="top" title="Add Appointment">
                            <i class="fa fa-plus"></i>
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-warning" asp-action="AddVisit" asp-controller="Visit" asp-route-PatientId="@item.Id"
                           data-toggle="tooltip" data-placement="top" title="Add Visit">
                            <i class="fa fa-plus"></i>
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<h6>
    Visits
</h6>
<table class="table table-hover" >
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Phone</th>
            <th scope="col">Visits' Dates</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @foreach (var subitem in item.Visits)
            {
                <tr>
                    <td scope="row">
                        @item.Id
                    </td>
                    <td scope="row">
                        <a asp-controller="Patient" asp-action="GetPatient" asp-route-id="@item.Id">
                            @item.Name
                        </a>
                    </td>
                    <td scope="row">
                        @item.Phone
                    </td>
                    <td scope="row">
                        @if (item.Visits.Count > 0)
                        {
                            <p class="text-success" style="font-weight:500">
                                @subitem.Date
                            </p>
                        }
                    </td>
                    <td scope="row">
                        @if (item.Visits.Count > 0)
                        {
                            <a class="btn btn-primary" asp-action="Index" asp-controller="Visit"
                               asp-route-PatientId="@item.Id" asp-route-VisitId="@subitem.Id"
                               data-toggle="tooltip" data-placement="top" title="Show Visit Details">
                                <i class="fa fa-eye"></i>
                            </a>
                        }
                    </td>
                </tr>
            }

        }
    </tbody>
</table>